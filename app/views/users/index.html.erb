<h1>Users#index</h1>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Challenges</th>
      <th>Answers</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.challenges.count %></td>
        <td><%= user.answers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
