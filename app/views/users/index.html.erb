<h1>Users#index</h1>
<table class="table">
  <tr>
    <th>User</th>
    <th>Challenges</th>
    <th>Answers</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, "/users/#{user.id}" %></td>
    <td><%= user.challenges.count %></td>
    <td><%= user.answers.count %></td>
  </tr>
<% end %>
</table>
