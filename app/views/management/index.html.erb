<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Answers</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= link_to challenge.title, challenge %>
        <td><%= link_to challenge.answers.count, challenge_answers_path(challenge) %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Challenge', new_challenge_path %><br />

<h3>Answers</h3>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Challenge</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to answer.title, [answer.challenge, answer] %></td>
        <td><%= link_to answer.challenge.title, answer.challenge %></td>
        <td><%= link_to 'Edit', ['edit', answer.challenge, answer] %></td>
        <td><%= link_to 'Destroy', [answer.challenge, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>