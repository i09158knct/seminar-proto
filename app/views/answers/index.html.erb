<h1>Listing answers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Gist</th>
    <th>File names</th>
    <th>Description</th>
    <th>Challenge</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.title %></td>
    <td><%= answer.gist_id %></td>
    <td><%= answer.file_names %></td>
    <td><%= answer.description %></td>
    <td><%= answer.challenge_id %></td>
    <td><%= answer.user_id %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

